@model IEnumerable<Models.Cart> // Replace "Models" with your namespace

@{
    ViewData["Title"] = "Your Shopping Cart";
}

<h1>Your Shopping Cart</h1>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Book</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Book?.Name
                 
                        @item.Book?.Price.ToString("C")
                    </td>
                 
                    <td>
                        <form asp-action="RemoveFromCart" asp-controller="Cart">
                            <button type="submit" class="btn btn-danger">Remove</button>
                          
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p><strong>Total:</strong> @ViewBag.Total</p>

}
else
{
    <p>Your cart is currently empty.</p>
}